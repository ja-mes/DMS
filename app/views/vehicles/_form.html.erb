<%= render 'shared/errors', obj: @vehicle %>


<%= form_for @vehicle do |f| %>
    <div class="row">

        <div class="col-md">
            <div class="form-group">
                <%= f.label :year %>
                <%= f.text_field :year, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :make %>
                <%= f.text_field :make, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :model %>
                <%= f.text_field :model, class: "form-control" %>
            </div>
        </div>

        <div class="col-md">
            <div class="form-group">
                <%= f.label :vin, 'VIN' %>
                <%= f.text_field :vin, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :stock, "Stock#" %>
                <%= f.text_field :stock, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :color %>
                <%= f.text_field :color, class: "form-control" %>
            </div>
        </div>

        <div class="col-md">
            <div class="form-group">
                <%= f.label :mileage %>
                <%= f.text_field :mileage, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :engine %>
                <%= f.text_field :engine, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :vehicle_type, "Vehicle Type" %>
                <%= f.text_field :vehicle_type, class: "form-control" %>
            </div>
        </div>


    </div>

    <%= f.submit class: "btn btn-primary" %>
<% end %>
